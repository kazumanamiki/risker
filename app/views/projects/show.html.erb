<div>
	<ol class="breadcrumb">
		<li><%= link_to @project.user.nickname, user_path(@project.user) %></li>
		<li class="active"><%= @project.name %></a></li>
	</ol>
</div>

<div class="panel panel-primary">
	<div class="panel-heading">
		<h2 class="bg-primary">
			<%= @project.name %>
		</h2>
	</div>

	<div class="panel-body">
		<dl class="dl-horizontal">
			<dt>リスク総件数</dt>
				<dd><%= @project.risks.count %>件</dd>
			<dt>要チェックリスク</dt>
				<dd>
					<a href="#">リスク名1</a>
					<a href="#" class="btn btn-link btn-xs">
						<span class="glyphicon glyphicon-search"></span>
					</a>
					<small class="text-muted">YYYY/MM/DD</small>
				</dd>
				<dd>
					<a href="#">リスク名2</a>
					<a href="#" class="btn btn-link btn-xs">
						<span class="glyphicon glyphicon-search"></span>
					</a>
					<small class="text-muted">YYYY/MM/DD</small>
				</dd>
			<dt>次回チェックリスク</dt>
				<dd>
					<a href="#">リスク名</a>
					<a href="#" class="btn btn-link btn-xs">
						<span class="glyphicon glyphicon-search"></span>
					</a>
					<small class="text-muted">YYYY/MM/DD</small>
				</dd>
		</dl>

		<div class="table-responsive">
			<table id="cost-comment-table" class="table table-bordered table-condensed">
				<thead>
					<tr>
						<th>
							<span class="glyphicon glyphicon-eye-open"></span>
							リスク
						</th>
						<th class="col-sm-3">
							<span class="glyphicon glyphicon-stats"></span>
							ステータス
						</th>
					</tr>
				</thead>
			<% @project.risks.find_each do |risk| %>
				<tr>
					<td>
						<%= link_to risk.title, risk_path(risk) %>
						<a href="#" class="btn btn-link btn-xs">
							<span class="glyphicon glyphicon-search"></span>
						</a>
					</td>
					<td><%= RiskModelHelper.type_to_s risk.status %></td>
				</tr>
			<% end %>
				<tr>
					<td colspan="2" class="text-right">
						<a href="<%= new_risk_path({ project: @project.id }) %>">
							<span class="glyphicon glyphicon-plus"></span>
							リスクの追加
						</a>
					</td>
				</tr>
			</table>
		</div>
	</div>
</div>