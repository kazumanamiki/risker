<div>
	<ol class="breadcrumb">
		<li><a href="#">user</a></li>
		<li class="active"><%= @project.name %></a></li>
	</ol>
</div>

<div>
	<h2>
		<%= @project.name %>
	</h2>
</div>

<div class="table-responsive">
	<table id="cost-comment-table" class="table table-striped table-bordered table-hover">
		<head>
			<tr>
				<th>リスク</th>
				<th class="col-sm-3">ステータス</th>
			</tr>
		</head>
		<% @project.risks.find_each do |risk| %>
			<tr>
				<td><%= link_to risk.title, risk_path(risk) %></td>
				<td><%= RiskModelHelper.type_to_s risk.status %></td>
			</tr>
		<% end %>
		<tr>
			<td colspan="2"><%= link_to "追加", new_risk_path({ project: @project.id }) %></td>
		</tr>
	</table>
</div>