<%= render 'shared/breadcrumb', target_crumb: @project %>

<div class="panel panel-primary">
	<div class="panel-heading">
		<h2 class="bg-primary">プロジェクトの作成</h2>
	</div>

	<div class="panel-body">
		<%= form_for(@project) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<fieldset>
				<div class="form-group">
					<%= f.label :name, "プロジェクト名", class: "control-label" %>
					<%= f.text_field :name, class: "form-control", placeholder: "プロジェクト名" %>
				</div>
				<div class="form-group">
					<%= f.submit "プロジェクトを作成", class: "btn btn-primary pull-right" %>
				</div>
			</fieldset>
		<% end %>
	</div>

</div>