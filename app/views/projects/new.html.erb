<div>
	<ol class="breadcrumb">
		<li><a href="#">user</a></li>
		<li class="active">プロジェクトの作成</li>
	</ol>
</div>

<div class="page-header">
	<h1>プロジェクトの作成</h1>
</div>

<%= form_for(@project, html: { class: "form-horizontal" }) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<fieldset>
		<div class="form-group">
			<%= f.label :name, "プロジェクト名", class: "col-sm-2 control-label" %>
			<div class="col-sm-9">
				<%= f.text_field :name, class: "form-control", placeholder: "プロジェクト名" %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<%= f.submit "プロジェクトを作成", class: "btn btn-primary" %>
			</div>
		</div>
	</fieldset>
<% end %>