<div class="panel panel-default">
	<div class="panel-heading">
		<h2>新しいパスワードを入力して下さい</h2>
	</div>
	<div class="panel-body">
		<%= form_tag(password_reset_path(hash: @hash), method: 'patch') do %>
			<%= render 'shared/error_messages', object: @user %>
			<fieldset>
				<div class="form-group">
					<%= label_tag 'user[password]', "パスワード", class: "control-label" %>
					<%= password_field_tag 'user[password]', "", class: "form-control", placeholder: "パスワード" %>
				</div>

				<div class="form-group">
					<%= label_tag 'user[password_confirmation]', "パスワード(確認)", class: "control-label" %>
					<%= password_field_tag 'user[password_confirmation]', "", class: "form-control", placeholder: "パスワード(確認)" %>
				</div>

				<%= submit_tag "パスワードをリセットする", class: "btn btn-primary pull-right" %>
			</fieldset>
		<% end %>
	</div>
</div>
