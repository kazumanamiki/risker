<%
tab_data_array = [
	{ id: "projects", name: "プロジェクト", render_page: "users/projects" },
	{ id: "risks", name: "リスク", render_page: "users/risks" }
]
@tab_active = tab_data_array[0][:id] if @tab_active.blank?
%>

<div class="panel panel-primary">
	<div class="panel-heading">
		<h2 class="bg-primary">マネージャー：<%= @user.nickname %></h2>
	</div>

	<ul class="nav nav-tabs">
	<% tab_data_array.each do |tab_data| %>
		<li class="<%= "active" if @tab_active == tab_data[:id] %>">
			<a href="#<%= tab_data[:id] %>" data-toggle="tab"><%= tab_data[:name] %></a>
		</li>
	<% end%>
	</ul>

	<div class="panel-body tab-content">
	<% tab_data_array.each do |tab_data| %>
		<div class="tab-pane <%= "active" if @tab_active == tab_data[:id] %>" id="<%= tab_data[:id] %>">
			<%= render tab_data[:render_page] %>
		</div>
	<% end %>
	</div>
</div>